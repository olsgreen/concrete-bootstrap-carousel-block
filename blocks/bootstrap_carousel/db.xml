<?xml version="1.0"?>
<schema version="0.3">
    
	<table name="btBootstrapCarousel">
		<field name="bID" type="I">
			<key />
			<unsigned />
		</field>		
		<field name="width" type="I">
			<unsigned />
            <default value="0" />
		</field>        
		<field name="height" type="I">
			<unsigned />
            <default value="0" />
		</field>
        <field name="delay" type="I">
			<unsigned />
            <default value="5000" />
		</field>
        <field name="pause" type="I">
			<unsigned />
            <default value="1" />
		</field>
	</table>
    
    <table name="btBootstrapCarouselSlides">
        <field name="sID" type="I">
			<key />
			<unsigned />
            <AUTOINCREMENT />
		</field>
		<field name="bID" type="I">
			<unsigned />
		</field>
        <field name="imageID" type="I">
			<unsigned />
		</field>
		<field name="mobileImageID" type="I">
			<unsigned />
		</field>
		<field name="content" type="X2">
		</field>
        <field name="position" type="I">
			<unsigned />
		</field>
        <field name="link" type="X2">
		</field>
	</table>
    
</schema>